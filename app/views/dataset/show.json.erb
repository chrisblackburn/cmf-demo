{
 "name": "flare",
 "children": [
   <% Dataset.all.group_by(&:gics_sector).each do |sector, group| %>
   {
     "name": "<%= sector %>",
     "children": [{
       "name": "cluster",
       "children": [
        <% group.each_with_index do |item, index| %>
         {"name": "<%= item.discloser_name %>", "size": <%= item.disclosure_score * 2000 %>}<% if index +1 != group.length %>,<% end %>
        <% end %>
       ]
      }]
    },
   <% end %>
    {"name": "Visualization", "size": 16540}
 ]
}
